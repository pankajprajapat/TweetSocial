<% pre_like = comment.likes.find { |like| like.user_id == current_user.id} %>
<% if pre_like %>
  <%= button_to 'Unlike', comment_like_path(comment, pre_like), method: :delete, remote: true %>
<% else %>
  <%= button_to 'Like', comment_likes_path(comment), method: :post, remote: true %>
<% end %>
<p style="background-color:tomato;"><%= comment.likes.count %> likes</p>
