<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Tweet</th>
      <th>Status</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.tweet %></td>
        <td><%= post.status %></td>
        <td><%= post.attachment.try(:attachment) %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) if post.status == 'Draft' %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
